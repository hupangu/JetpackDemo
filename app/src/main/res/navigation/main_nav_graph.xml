<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.leo.demo.jetpack.MainFragment"
        android:label="MainFragment">
        <action
            android:id="@+id/action_mainFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_mainFragment_to_shoppingFragment"
            app:destination="@id/shoppingFragment" />
        <action
            android:id="@+id/action_mainFragment_to_meFragment"
            app:destination="@id/meFragment" />
        <action
            android:id="@+id/action_mainFragment_to_categoryFragment"
            app:destination="@id/categoryFragment" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.leo.demo.jetpack.home.HomeFragment"
        android:label="HomeFragment" />
    <fragment
        android:id="@+id/shoppingFragment"
        android:name="com.leo.demo.jetpack.shopping.ShoppingFragment"
        android:label="ShoppingFragment" />
    <fragment
        android:id="@+id/meFragment"
        android:name="com.leo.demo.jetpack.me.MeFragment"
        android:label="MeFragment" />
    <fragment
        android:id="@+id/categoryFragment"
        android:name="com.leo.demo.jetpack.category.CategoryFragment"
        android:label="CategoryFragment" />
</navigation>
